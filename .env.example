# MQTT Broker Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883

# OpenDTU Settings
# The IP address of your OpenDTU ESP32 device
OPENDTU_IP=192.168.x.x
# Login credentials for OpenDTU Web API
OPENDTU_USER=admin
OPENDTU_PASS=secret

# Power Meter (e.g. Shelly) Settings
# The IP address of your Power Meter
METER_IP=192.168.x.x
METER_USER=admin
METER_PASS=

# InfluxDB Settings (Data Storage)
# Token must match the one used in docker-compose or generated in InfluxDB UI
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=my-super-secret-auth-token
INFLUXDB_ORG=solar
INFLUXDB_BUCKET=zero_export

# Admin Credentials for Services
# InfluxDB Admin User (Initial Setup)
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASS=admin123

# Grafana Admin User
GF_SECURITY_ADMIN_PASSWORD=admin
